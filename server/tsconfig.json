{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "baseUrl": "./",
      "declaration": true,
      "emitDecoratorMetadata": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "incremental": true,
      "lib": ["ES2020.Promise"],
      "module": "commonjs",
      "outDir": "./dist",
      "removeComments": true,
      "skipLibCheck": true,
      "sourceMap": true,
      "strictNullChecks": true,
      "target": "es2017",
      "typeRoots": ["./node_modules/@types"]
    }
}